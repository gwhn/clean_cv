.cv-section.last-cv-section.fixed
  %h2.cv-section-name Delete task
  .cv-section-items
    - semantic_form_for [@person, @company, @project, @task], :html => { :method => 'delete' } do |f|
      %p Are you sure you want to delete #{@task.description}?
      - f.buttons do
        = f.commit_button 'Yes'

    - if permitted_to? :read, @person
      = link_to 'Back', @person
