<h1>Listing responsibilities</h1>

<table>
  <tr>
    <th>Person</th>
    <th>Company</th>
    <th>Project</th>
    <th>Description</th>
  </tr>

  <% @responsibilities.each do |responsibility| %>
      <tr>
        <td><%= h responsibility.project.company.person.name %></td>
        <td><%= h responsibility.project.company.name %></td>
        <td><%= h responsibility.project.name %></td>
        <td><%= h responsibility.description %></td>
        <td><%= link_to 'Show', person_company_project_responsibility_path(@person, @company, @project, responsibility) %></td>
        <td><%= link_to 'Edit', edit_person_company_project_responsibility_path(@person, @company, @project, responsibility) %></td>
        <td><%= link_to 'Destroy', person_company_project_responsibility_path(@person, @company, @project, responsibility),
                        :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
  <% end %>
</table>

<br/>

<%= link_to 'New responsibility', new_person_company_project_responsibility_path(@person, @company, @project) %>