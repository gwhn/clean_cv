%h1 Listing responsibilities
%table
  %tr
    %th Person
    %th Company
    %th Description
  - @responsibilities.each do |responsibility|
    %tr
      %td= h responsibility.company.person.name
      %td= h responsibility.company.name
      %td= h responsibility.description 
      %td= link_to 'Show', person_company_responsibility_path(@person, @company, responsibility) if permitted_to? :read, responsibility
      %td= link_to 'Edit', edit_person_company_responsibility_path(@person, @company, responsibility) if permitted_to? :update, responsibility
      %td= link_to 'Destroy', person_company_responsibility_path(@person, @company, responsibility),
        :confirm => 'Are you sure?', :method => :delete if permitted_to? :delete, responsibility
%br
- if permitted_to? :create, :responsibilities
  = link_to 'New responsibility', new_person_company_responsibility_path(@person, @company)