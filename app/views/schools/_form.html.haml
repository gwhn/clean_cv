- semantic_form_for([person, school]) do |f|
  - f.inputs do
    = f.input :name
    = f.input :course
    = f.input :result
    = f.input :date_from, :as => :date,
      :start_year => Time.now.year - 30, :end_year => Time.now.year,
      :discard_day => true, :discard_month => true
    = f.input :date_to, :as => :date,
      :start_year => Time.now.year - 30, :end_year => Time.now.year,
      :discard_day => true, :discard_month => true
  - f.buttons do
    = f.commit_button