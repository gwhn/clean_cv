%div{:id => ['school', item.id], :class => 'school'}
  %div{:class => [:item, (defined?(current) && defined?(total) && current == total - 1 ? 'last-item' : '')]}
    %h4 #{h item.date_from.to_s(:year_only)} - #{h item.date_to.to_s(:year_only)}
    %h2= h item.name

    - if current_user
      .br-options
        = link_to 'Edit', edit_person_school_path(item.person, item), :class => 'remote-link', :title => 'Edit school'
        |
        = link_to 'Delete', delete_person_school_path(item.person, item), :class => 'remote-link', :title => 'Delete school'

    %h3= h item.course
    .result= h item.result
