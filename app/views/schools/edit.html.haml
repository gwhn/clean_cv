.cv-section.last-cv-section.fixed
  %h2.cv-section-name Edit school
  .cv-section-items
    = render :partial => 'form', :locals => {:person => @person, :school => @school}

    - if permitted_to? :read, @school
      = link_to 'Show', person_school_path(@person, @school)
      = link_to 'Back', person_schools_path(@person)
