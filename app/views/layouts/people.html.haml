!!! XML
!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %title= yield :title
    %meta{"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}
    %meta{:name => "description", :content => " ... add description here ... "}
    %meta{:name => "keywords", :content => " ... add keywords here ... "}
    %link{:rel => "shortcut icon", :type => "image/x-icon", :href => "favicon.ico"}
    = stylesheet_link_tag 'screen', 'jquery.fancybox-1.2.6.css', 'tipsy'
    = stylesheet_link_tag 'print', :media => 'print'
    <!--[if lt IE 7]>
    = javascript_include_tag 'DD_belatedPNG_0.0.7a-min.js'
    <![endif]-->
    = javascript_include_tag :defaults, 'jquery-1.4.2.min.js', 'cufon-yui.js', 'Aller.font.js',
      'jquery.fancybox-1.2.6.pack.js', 'jquery.tipsy.js'
    :javascript
      $(function() {
        Cufon.replace("h1, h6");
        Cufon.replace(".item h2");
        Cufon.replace("h2.cv-section-name");
        Cufon.now();
        $("a.lightbox").fancybox({
          overlayOpacity  : 0.7,
          overlayColor    : "#333"
        });
        $(".tip").tipsy({gravity: "n"});
        $(".emailme").click(function() {
          $(".panel").toggle("fast");
          $(this).toggleClass("active");
          return false;
        });
      });
  %body
    #cv= yield
    .authme
      - if current_user
        = link_to 'Logout', logout_path
        = image_tag '/images/log_out.png'
      - else
        = link_to 'Login', login_path
        = image_tag '/images/log_in.png'
