<h1>Editing skill</h1>

<% form_for([@person, @skill]) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :name %><br/>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :level %><br/>
      <%= f.text_field :level %>
    </p>
    <p>
      <%= f.label :description %><br/>
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.submit 'Update' %>
    </p>
<% end %>

<%= link_to 'Show', person_skill_path(@person, @skill) %> |
<%= link_to 'Back', person_skills_path(@person) %>