%div{:id => ['skill', item.id], :class => 'skill'}
  %div{:class => [:item, (defined?(item_counter) && defined?(total) && item_counter == total - 1 ? 'last-item' : '')]}
    %h4= item.level
    %h2= item.name

    - if current_user
      .br-options
        = link_to 'Edit', edit_person_skill_path(item.person, item), :class => 'remote-link', :title => 'Edit skill'
        |
        = link_to 'Delete', delete_person_skill_path(item.person, item), :class => 'remote-link', :title => 'Delete skill'

    %br
    %p= item.description
