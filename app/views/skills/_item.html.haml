%div{:id => ['skill', item.id], :class => ['skill']}
  %div{:class => [:item, :handle, (defined?(current) && defined?(total) && current == total - 1 ? 'last-item' : '')]}
    %h4= item.level
    %h2= item.name

    - if current_user
      .br-options
        - if permitted_to? :update, item
          = link_to 'Edit skill', edit_person_skill_path(item.person, item), :class => 'remote-link', :title => 'Edit skill'
        - if permitted_to? :delete, item
          = link_to 'Delete skill', delete_person_skill_path(item.person, item), :class => 'remote-link', :title => 'Delete skill'

    %br
    %p= item.description
