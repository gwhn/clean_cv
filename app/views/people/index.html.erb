<h1>Listing people</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Job title</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Mobile</th>
    <th>Portrait url</th>
    <th>Portrait thumb url</th>
    <th>Flickr url</th>
    <th>Twitter url</th>
    <th>Facebook url</th>
    <th>LinkedIn url</th>
    <th>Profile</th>
  </tr>

  <% @people.each do |person| %>
      <tr>
        <td><%= h person.name %></td>
        <td><%= h person.job_title %></td>
        <td><%= h person.email %></td>
        <td><%= h person.phone %></td>
        <td><%= h person.mobile %></td>
        <td><%= h person.portrait_url %></td>
        <td><%= h person.flickr_url %></td>
        <td><%= h person.twitter_url %></td>
        <td><%= h person.facebook_url %></td>
        <td><%= h person.linked_in_url %></td>
        <td><%= h person.profile %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
  <% end %>
</table>

<br/>

<%= link_to 'New person', new_person_path %>