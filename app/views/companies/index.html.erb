<h1>Listing companies</h1>

<table>
  <tr>
    <th>Person</th>
    <th>Name</th>
    <th>Role</th>
    <th>Business type</th>
    <th>Start date</th>
    <th>End date</th>
  </tr>

  <% @companies.each do |company| %>
      <tr>
        <td><%= h company.person.name %></td>
        <td><%= h company.name %></td>
        <td><%= h company.role %></td>
        <td><%= h company.business_type %></td>
        <td><%= h company.start_date %></td>
        <td><%= h company.end_date %></td>
        <td><%= link_to 'Show', person_company_path(@person, company) %></td>
        <td><%= link_to 'Edit', edit_person_company_path(@person, company) %></td>
        <td><%= link_to 'Destroy', person_company_path(@person, company),
                        :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
  <% end %>
</table>

<br/>

<%= link_to 'New company', new_person_company_path(@person) %>