<%- companies_id = "person_#{@person.id}_companies" %>
$("#<%= companies_id %> #company_<%= @company.id %>").replaceWith("<%= escape_javascript(render :partial => 'item', :object => @company) %>");
$("#<%= companies_id %> .company:last .item").addClass("last-item");
bindRemoteLinks("#form-dialog", "#<%= companies_id %> #company_<%= @company.id %> .remote-link");
$("#<%= companies_id %> #company_<%= @company.id %>").effect("highlight");
