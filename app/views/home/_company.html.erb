<div class="item<%= " last-item" if company_counter == total - 1 %>">
  <h4><%= h company.start_date.to_s(:month_and_year) %> -
    <%= h company.end_date.to_s(:year_only) %></h4>

  <h2><%= h company.name %></h2>

  <h5><%= h company.role %></h5>

  <h3><%= h company.business_type %></h3>

  <%= render :partial => 'project', :collection => company.projects %>
</div>