<h1>New project</h1>

<% form_for(@project) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :company_id %><br />
      <%= f.select :company_id, @companies %>
    </p>
    <p>
      <%= f.label :name %><br/>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :description %><br/>
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.submit 'Create' %>
    </p>
<% end %>

<%= link_to 'Back', projects_path %>