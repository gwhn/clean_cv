<h1>Editing project</h1>

<% form_for([@person, @company, @project]) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :name %><br/>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :description %><br/>
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.submit 'Update' %>
    </p>
<% end %>

<%= link_to 'Show', person_company_project_path(@person, @company, @project) %> |
<%= link_to 'Back', person_company_projects_path(@person, @company) %>