<%- projects_id = "person_#{@project.company.person.id}_company_#{@project.company.id}_projects" %>
var last_panel = $("#<%= projects_id %>").data("tabs").getPanes().length - 1;
$("#project_<%= @project.id %> + .options").remove();
$("#project_<%= @project.id %>").remove();
$("#<%= projects_id %>").append("<%= escape_javascript(render :partial => 'item', :object => @project) %>")
    .tabs("destroy")
    .tabs(".accordion .panel", {tabs: "h6", initialIndex: last_panel});
bindRemoteLinks("#form-dialog", "#<%= projects_id %> .remote-link");
$("#project_<%= @project.id %>").effect("highlight");
$("#project_<%= @project.id %>")
    .tooltip("destroy")
    .tooltip({
        effect:"slide",
        position: "top center",
        delay: 750,
        tipClass: "options"
    })
    .dynamic({
        bottom: {
            direction: "down"
        }
    });
