- project_id = "project_#{item.id}"
%div{:id => project_id, :class => 'project'}

  %h6= h item.name

  %p= h item.description

  - tasks_id = "person_#{item.company.person.id}_company_#{item.company.id}_project_#{item.id}_tasks"
  %ul{:id => tasks_id}
    = render :partial => 'tasks/item', :collection => item.tasks

    = content_for :javascript do
      = sortable_javascript_for "&person_id=#{item.company.person.id}&company_id=#{item.company.id}&project_id=#{item.id}", "##{tasks_id}", '.task', reposition_person_company_project_tasks_url(item.company.person, item.company, item)

  - skills_id = "person_#{item.company.person.id}_company_#{item.company.id}_project_#{item.id}_skills"
  %ul{:id => skills_id, :class => 'repeater'}
    = render :partial => 'projects/skill', :collection => item.skills unless item.skills.nil?

- if current_user
  %ul.options
    - if permitted_to? :update, item
      %li= link_to 'Edit project', edit_person_company_project_path(item.company.person, item.company, item), :class => 'remote-link', :title => 'Edit project'
    - if permitted_to? :delete, item
      %li= link_to 'Delete project', delete_person_company_project_path(item.company.person, item.company, item), :class => 'remote-link', :title => 'Delete project'

- content_for :javascript do
  = dynamic_tooltip_javascript_for "##{project_id}"
