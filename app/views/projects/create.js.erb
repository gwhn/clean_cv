<%- projects_id = "person_#{@person.id}_company_#{@company.id}_projects" %>
var lastTabIndex = $("#<%= projects_id %>").data("tabs").getTabs().length;
$("#<%= projects_id %>").append("<%= escape_javascript(render :partial => 'item', :object => @project) %>")
    .tabs("destroy")
    .tabs("#<%= projects_id %>.accordion .panel", {tabs: "h6", initialIndex: lastTabIndex});
bindRemoteLinks("#form-dialog", "#<%= projects_id %> .remote-link");
$(".move-actions").hide();
$.scrollTo("#project_<%= @project.id %>", "fast");
$("#project_<%= @project.id %>").effect("highlight");
$("#project_<%= @project.id %> > .project")
    .tooltip("destroy")
    .tooltip({
        effect:"slide",
        position: "top center",
        delay: 750,
        tipClass: "options"
    })
    .dynamic({
        bottom: {
            direction: "down"
        }
    });
